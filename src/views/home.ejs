<!DOCTYPE html>
<html lang="es">

<%- include('./partials/head.ejs') %>

     <body>

          <%- include('./partials/header.ejs') %>

               <!-- carousel - Presentación de diapositivas para recorrer los elementos-->
               <div class="carouselContainer">

                    <!-- Imágenes con el ancho completo más el número -->
                    <div class="mySlides fade">
                         <div class="numbertext">1 / 4</div>
                         <img src="/img/carouselHome/construccion.png" style="width:100%">                    
                    </div>

                    <div class="mySlides fade">
                         <div class="numbertext">2 / 4</div>
                         <img src="/img/carouselHome/blanco-negro.png" style="width:100%">                     
                    </div>

                    <div class="mySlides fade">
                         <div class="numbertext">3 / 4</div>
                         <img src="/img/carouselHome/rio-carcaraña.png" style="width:100%">                       
                    </div>

                    <div class="mySlides fade">
                         <div class="numbertext">4 / 4</div>
                         <img src="/img/carouselHome/avion.png" style="width:100%">                        
                    </div>

                    <!-- Botones anterior y siguiente -->
                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>
               </div>
               <br>

               <!-- Puntitos -->
               <div style="text-align:center;">
                    <span class="dot" onclick="currentSlide(1)"></span>
                    <span class="dot" onclick="currentSlide(2)"></span>
                    <span class="dot" onclick="currentSlide(3)"></span>
                    <span class="dot" onclick="currentSlide(4)"></span>
                    <span class="dot" onclick="currentSlide(5)"></span>
                    <span class="dot" onclick="currentSlide(6)"></span>
                    <span class="dot" onclick="currentSlide(7)"></span>
                    <span class="dot" onclick="currentSlide(8)"></span>
                    <span class="dot" onclick="currentSlide(9)"></span>
                    <span class="dot" onclick="currentSlide(10)"></span>
               </div>

               <!-- end carousel -->

               <script src="/js/carouselHome.js" defer></script> 
     </body>

</html>